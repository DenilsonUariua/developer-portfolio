---
import heroImage from "@assets/images/coding.svg";
import Button from "@components/ui/Button.astro";
import { Image } from "astro:assets";
---

<section
  data-testid="hero"
  class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
  <div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2 animate-fade-up">
    <div>
      <h1
        class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl"
      >
        Hi! My name is <span class="text-purple">Denilson Uariua</span> and I am
        a web developer based in Osona
      </h1>
    </div>

    <div class="mb-10 animate-fade-up delay-1000 duration-300">
      <a href={"#about"} aria-label="link to project">
        <Button
          style={"primary"}
          size={"lg"}
          class={"flex hover:!bg-purple duration-300 transition-colors"}
          name="learn more">See what makes me tick!</Button
        >
      </a>
    </div>
  </div>
  <div
    data-testid="hero-img"
    class="mb-10 flex w-1/2 items-center justify-center animate-fade-left"
  >
    <Image
      src={heroImage as any}
      alt="Coding girl"
      format="png"
      width={600}
      height={600}
      loading="eager"
    />
  </div>
</section>
